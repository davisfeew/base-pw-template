{
  "name": "playwright-basic-framework",
  "version": "1.0.0",
  "scripts": {
    "test:fe": "npx playwright test tests/fe/guiTest.spec.ts --headed",
    "test:api": "ts-mocha --esm -p tsconfig.json --timeout 10000 tests/api/**/*.spec.ts",
    "test:api2": "mocha --loader ts-node/esm --extensions ts --timeout 10000 \"tests/api/**/*.spec.ts\"",
    "test:api:getPost": "mocha --timeout 10000 -r ts-node/register tests/getPost.spec.ts",
    "report": "npx playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "mocha": "^10.2.0",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "chai": "^5.2.0",
    "dotenv": "^16.5.0"
  }
}
