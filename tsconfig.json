{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "types": ["node", "mocha", "chai", "@playwright/test"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts",
    "playwright.config.ts"
  ]
}
